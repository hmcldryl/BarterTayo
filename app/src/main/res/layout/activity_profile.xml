<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_body"
    tools:context=".ui.ProfileActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/background_header"
        android:elevation="8dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_button_back"
            android:backgroundTint="@color/iconTint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/montserrat_bold"
            android:text="Profile"
            android:textColor="@color/textColor"
            android:textSize="24sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfilePhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/placeholder_userpicture" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/userProfilePhoto"
            android:background="@drawable/ic_button_uploadphoto"
            android:backgroundTint="@color/iconTint" />

        <TextView
            android:id="@+id/userProfileName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfilePhoto"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="display_name"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userProfileFullName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfileName"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat"
            android:text="full_name"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/userScoreAndFollowers"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/userProfileFullName"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/userProfileBarterScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="barter_score"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/userProfileFollowers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="follower_count"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/userProfileBio"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userScoreAndFollowers"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="3"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/userProfilePostBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/userProfileBio"
            android:background="@color/colorPrimary"
            android:elevation="8dp"
            android:orientation="horizontal">

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userProfilePosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userProfilePostBar" />

    </RelativeLayout>


</RelativeLayout>